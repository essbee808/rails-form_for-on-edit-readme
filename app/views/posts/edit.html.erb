<!-- |f| is an iterator variable used to dynamically
 assign form field elements to each of the post's attributes -->
<%= form_for(@post) do |f| %> 
  <label>Post title:</label><br>
  <%= f.text_field :title %><br>

  <label>Post description:</label><br>
  <%= f.text_area :description %><br>

  <%= f.submit %>
<% end %>